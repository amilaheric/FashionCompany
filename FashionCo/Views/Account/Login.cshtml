@{
}
@model FashionCo.ViewModels.LoginVM



    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            background-color: #343148
        }


        .card {
            background-color: #D7C49E
        }

        #prijavaF {
            display: flex;
            flex-flow: column;
            justify-content: center;
            padding: 10px 50px;
        }

        input {
            width: 100%;
            display: block;
            margin-bottom: 7px
        }

        .form-control {
            border: 1px solid #343148;
            background-color: rgba(0, 0, 0, .075);
            letter-spacing: 1px
        }
    </style>


<div class="container">

    <div class="row">
        <div class="col-md-6 mx-auto py-4 px-0">
            <div class="card p-0">
                <div class="card-title text-center">
                    <h5 class="mt-5">LOGIN</h5>
                 </div>
                    <form id="prijavaF" method="post" class="">
                        

                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group text-center font-weight-bold">
                            <label asp-for="Email" style="width:40%"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center font-weight-bold">
                            <label asp-for="Password" style="width:40%"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center font-weight-bold">
                            <div class="custom-checkbox">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-dark">Login</button>
                    </form>

                  </div>
            </div>
        

       </div>
    </div>

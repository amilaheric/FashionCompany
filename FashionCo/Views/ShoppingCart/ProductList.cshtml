@{
}

@model FashionCo.ViewModels.ProductListVM







<div id="content">
    <h1>Product List</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ProductID</th>
                <th>Product name</th>
                <th>Price</th>

                <th>Category</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model.rows)
            {
                <tr>
                    <td>@e.ProductID</td>
                    <td>@e.ProductName</td>
                    <td>@e.Price</td>

                    <td>@e.Category</td>

                    <td>@e.Description</td>

                    <td>
                        <a class="btn btn-outline-warning " asp-controller="Product" asp-action="" asp-route-ProductID="@e.ProductID">Add To Cart</a>
                        <a class="btn btn-outline-info " asp-controller="ShoppingCart" asp-action="ProductDetails" asp-route-ProductID="@e.ProductID">Details</a>
                    </td>
                </tr>
}
        </tbody>
    </table>

</div>


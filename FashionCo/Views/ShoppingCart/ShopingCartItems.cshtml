@model FashionCo.ViewModels.ShoppingCartVM
@{ ViewData["Title"] = "ShoppingCartDetails"; }


<table>
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>EachPrice</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var r in Model.Rows)
        {
            <tr>
                <td>@r.Product</td>
                <td>@r.Quantity</td>
                <td>@r.PriceOfProduct</td>
                <td>@r.Price</td>
            </tr>
        }

    </tbody>
</table>

<div>
    <label>@Model.Total</label>
</div>
@{
}
@model FashionCo.ViewModels.ProductDetailsVM


<style>


    body {
        font-family: Arial, Helvetica, sans-serif;
        background-color: #343148;
        color: #D7C49E
    }


    input, select {
        width: 100%;
        display: block;
        margin-bottom: 7px
    }

    .form-control, select {
        border: 1px solid #343148;
        background-color: rgba(0, 0, 0, .075);
        letter-spacing: 1px;
    }
  
</style>

<div class="container">
    <div class="row">








            <div class="col-md-6">

                <img src="/uploads/@Model.PictureUrl" class="img-thumbnail" style="max-width:300px;" />

            </div>

            <div class="col-md-6">
                <div>

                    <input class="form-control form-control-lg" asp-for="ProductID" readonly hidden />
                </div>


                <div class="col-md-6">

                    <label>Product name</label>
                    <input class="form-control form-control-lg" readonly type="text" asp-for="ProductName" />

                </div>





                <div class="col-md-6">
                    <label>Category</label>
                    <input class="form-control form-control-lg" readonly type="text" asp-for="Category" />

                </div>
                <div class="form-group col-md-6">
                    <input class="form-control form-control-lg" readonly type="text" asp-for="CategoryID" hidden />

                </div>







                <div class="col-md-6">
                    <label>Description</label>
                    <input class="form-control form-control-lg" readonly type="text" asp-for="Description" />

                </div>
                <div class="col-md-6">
                    <label>Price</label>
                    <input class="form-control form-control-lg" readonly type="text" asp-for="Price" />

                </div>
            </div>
        </div>
    </div>
    <div>
    </div>

</div>